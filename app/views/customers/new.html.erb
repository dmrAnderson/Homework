<h1>New Booking</h1>
<%= form_for(@customer) do |form| %>
  <%= render  "layouts/errors", object: @customer %>
  <div class="field">
    <%= form.text_field :first_name, autofocus: true,
                                     placeholder: "First name",
                                     required: true,
                                     pattern: "[A-Za-z]{1,25}",
                                     maxlength: "25" %> 
  </div>
  <div class="field">
    <%= form.text_field :last_name, required: true,
                                    placeholder: "Last name",
                                    pattern: "[A-Za-z]{1,25}",
                                    maxlength: "25" %>
  </div>
  <div class="field">
    <%= form.label :phone_number %>
    <%= form.telephone_field :phone_number, required: true,
                                            placeholder: "123-456-7890",
                                            maxlength: "12",
                                            pattern: "[0-9]{3}-[0-9]{3}-[0-9]{4}" %>
  </div>
  <%= form.fields_for :booking do |b| %>
    <div class="field">
      <%= b.label :city_id, "Select the city" %>
      <%= b.select :city_id, @cities.map { |c| [c.name, c.id] } %>      
    </div>
    <div class="field">
      <div>
        <%= b.label :date, "Set date" %>
        <%= b.date_field :date, min: "2020-06-13", max: "2021-06-13" %>
      </div>
      <div>
        <%= b.label :time, "and time" %>
        <%= b.time_field :time, min: "09:00", max: "18:00" %>
      </div>
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
