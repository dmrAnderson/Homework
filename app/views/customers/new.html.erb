<p id="notice"><%= notice %></p>

<h1>New Customer</h1>

<%= form_for(@customer) do |form| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, autofocus: true %> 
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.telephone_field :phone_number %>
  </div>

  <div class="field">
    <%= form.fields_for :booking do |b| %>
      <%= b.select :city_id, @cities.map { |c| [c.name, c.id] } %>      
      <%= b.date_field :date, min: "2020-06-13", max: "2021-06-13" %>
      <%= b.time_field :time, min: "09:00", max: "18:00" %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
