<h1>New City</h1>
<%= form_for(@city) do |form| %>
  <%= render  "layouts/errors", object: @city %>
  <div class="field">
    <%= form.text_field :name, autofocus: true,
                               placeholder: "Name",
                               required: true,
                               pattern: "[A-Za-z ]{4,14}",
                               maxlength: "14" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back', cities_path %>
